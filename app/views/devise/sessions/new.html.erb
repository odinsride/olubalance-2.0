<div class="py-10 h-full">
<%= render(FormComponent.new(title: "Login", size: "small")) do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'mt-6') do |f| %>
    <div class="font-bold text-green-800 tracking-wide">
      <%= f.label :email , class: 'block' %>
      <%= f.email_field :email, class: 'py-3 w-full text-lg border-b border-gray-300 focus:outline-none focus:border-green-500', placeholder: 'john@gmail.com' %>
    </div>

    <div class="mt-8 font-bold text-green-800 tracking-wide">
      <%= f.label :password, class: 'block' %>
      <%= f.password_field :password, class: 'py-3 w-full text-lg border-b border-gray-300 focus:outline-none focus:border-green-500', placeholder: 'Enter your password' %>
    </div>

    <%# if devise_mapping.rememberable? %>
<!--      <div class="field">-->
        <%#= f.check_box :remember_me %>
        <%#= f.label :remember_me %>
<!--      </div>-->
    <%# end %>
    <div class="mt-10">
      <%= f.submit "Login", class: "o-btn o-btn--primary w-full" %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
</div>